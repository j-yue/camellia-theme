[
  {
    "name": "theme_info",
    "theme_name": "Camellia Theme",
    "theme_author": "Jeanette Yue",
    "theme_version": "1.0.0",
    "theme_documentation_url": "https:\/\/help.shopify.com\/manual\/using-themes\/themes-by-shopify\/debut",
    "theme_support_url": "https:\/\/support.shopify.com\/"
  },

  {
    "name": "Colors",
    "settings": [
      {
      "type": "header",
      "content": "Colors"
      },
    
      {
      "type": "color",
      "label": "Primary Color",
      "id": "color__primary",
      "default": "#465C42"
      },
    
      {
      "type": "color",
      "label": "Secondary Color",
      "id": "color__secondary",
      "default": "#ffffff"
      },
    
      {
      "type": "color",
      "label": "Text Color",
      "id": "color__text",
      "default": "#000000"
      }
    ]
  },

  {
    "name": "Typography",
    "settings": [
      {
      "type": "header",
      "content": "Typography"
      },
    
      {
      "type": "font_picker",
      "label": "Heading Font",
      "id": "font__heading",
      "default": "helvetica_n4"
      },
    
      {
      "type": "font_picker",
      "label": "Body Font",
      "id": "font__body",
      "default": "helvetica_n4"
      },

      {
        "type": "range",
        "id": "font__size",
        "min": 10,
        "max": 50,
        "step": 2,
        "unit": "px",
        "label": "Body text size",
        "default": 16
    }

    ]
  },
  {
    "name": "Favicon",
    "settings": [
      {
        "type": "image_picker",
        "label": "Favicon",
        "id": "favicon",
        "info": "Will be scaled down to 32x32px"
        }
    ]
  }
]
