{% comment %}
  This is used to create CSS custom variables with Liquid references
  The file variables.scss is referring these CSS custom variables as Sass variables
  to use throughout the stylesheet
{% endcomment %}

{% assign font__heading = settings.font__heading %}
{% assign font__body = settings.font__body %}

{% style %}


    :root {

        --font__heading: {{font__heading.family}}, {{font__heading.fallback_families}};
        --font__body: {{settings.font__body.family}}, {{font__body.fallback_families}};
        --font__size: {{settings.font__size}}px;
        
        --color__primary: {{settings.color__primary}};
        --color__primary--100: {{settings.color__primary | color_modify: 'alpha', 0.1 }};
        --color__secondary: {{settings.color__secondary}};
        --color__text: {{settings.color__text}};
        
    }
    
{% endstyle %}
